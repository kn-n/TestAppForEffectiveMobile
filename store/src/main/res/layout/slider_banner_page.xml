<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dimen_17dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/radius_10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="140dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marker_new"
                style="@style/bold_03.white_size_10sp"
                android:layout_width="@dimen/size_27dp"
                android:layout_height="@dimen/size_27dp"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:background="@drawable/circle_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_2dp"
                android:text="@string/marker_new"
                android:visibility="invisible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/product_name"
                style="@style/bold_01.size_25sp.white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54dp"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:gravity="bottom"
                android:maxLines="2"
                app:autoSizeMaxTextSize="@dimen/size_25dp"
                app:autoSizeMinTextSize="@dimen/text_size_20sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="Iphone 13" />

            <TextView
                android:id="@+id/product_description"
                style="@style/light_08.white_size_11sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                tools:text="Súper. Mega. Rápido." />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_buy"
                style="@style/bold_03.blue_size_12sp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_23dp"
                android:layout_marginVertical="@dimen/dimen_26dp"
                android:layout_marginStart="@dimen/dimen_32dp"
                android:background="@drawable/bg_white_radius_5dp"
                android:paddingHorizontal="@dimen/dimen_27dp"
                android:text="@string/buy_now"
                android:textAllCaps="false" />

        </LinearLayout>
    </FrameLayout>


</androidx.cardview.widget.CardView>