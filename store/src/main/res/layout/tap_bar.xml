<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_radius_30dp"
        android:backgroundTint="@color/dark_blue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/size_8dp"
                android:layout_height="@dimen/size_8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_white" />

            <TextView
                style="@style/medium_02.white_size_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:text="Explorer" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="@dimen/size_27dp"
                    android:layout_height="@dimen/size_27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/dimen_52dp"
                    android:src="@drawable/ic_cart_24dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/badge"
                    style="@style/regular_02.white_size_9sp"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dimen_11dp"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/orange"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_2dp"
                    tools:text="2" />

            </FrameLayout>

            <ImageView
                android:id="@+id/favorites"
                android:layout_width="@dimen/size_27dp"
                android:layout_height="@dimen/size_27dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_52dp"
                android:src="@drawable/ic_favorite_24dp"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/acc"
                android:layout_width="@dimen/size_27dp"
                android:layout_height="@dimen/size_27dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_acc_24dp"
                app:tint="@color/white" />
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>